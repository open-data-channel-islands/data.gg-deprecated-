 <% @chart_categories.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.each do |data_category| %>
      <div class="col-sm-4 col-md-4">
        <% unless data_category.nil? %>
          <a href="/charts/<%= data_category.stub %>" class="category">
            <div class="category-image <%= data_category.image %>"></div>
            <div class="category-detail">
              <h3><strong><%= data_category.name %></strong></h3>
              <p><%= data_category.desc %></p>
            </div>
          </a>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>