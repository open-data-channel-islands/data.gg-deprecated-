<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-striped table-hover vertical-align-middle" width="100%">
        <thead>
          <tr>
            <th>API</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @data_categories.each do |data_category| %>
            <tr>
              <td>
                <a class="category-inline-link" href="/developers/<%= data_category.stub %>">
                  <span class="category-small category-image <%= data_category.image %>"></span>
                  <%= data_category.name %>
                </a>
              </td>
              <td><%= data_category.desc %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>