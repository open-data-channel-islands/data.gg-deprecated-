<%= render 'head' %>

<div id="container_collisions" style="min-width: 310px; height: 500px; margin: 0 auto"></div>

<p>Source: <%= link_to 'guernsey.police.uk', 'http://www.guernsey.police.uk/article/6078/Publications' %></p>
<p><em>Updated 21/07/2015</em></p>

<%= javascript_tag do %>
$(function() {
  initPage();
});
$(window).bind('page:change', function() {
  initPage();
});

function initPage() {
    $('#container_collisions').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: '<%= @title %>'
        },
        xAxis: {
            allowDecimals: false,
            categories: <%= @labels.to_json.html_safe %>,
            title: {
                text: 'Year'
            }
        },
        yAxis: {
            allowDecimals: false,
            title: {
                text: 'Count'
            }
        },
        series: [{
            name: 'Collisions',
            data: <%= @collisions.to_json.html_safe -%>
        }]
    });
}
<% end %>
